FROM php:8.2-fpm

# Installa Node.js e npm
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# Installa le estensioni necessarie
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libonig-dev \
    libzip-dev \
    zip \
    unzip \
    git \
    curl

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Configura e installa estensioni PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd \
    && docker-php-ext-install -j$(nproc) pdo_mysql mbstring zip exif pcntl opcache

# Installa Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Verifica versioni installate
RUN php -v && node -v && npm -v && composer --version

WORKDIR /var/www

